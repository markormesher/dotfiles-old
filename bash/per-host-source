hostname=$(hostname -f)

function start_or_attach_tmux {
  if [[ -n "$PS1" ]] && [[ -z "$TMUX" ]]; then
    :
    # echo "Starting tmux session, hold on..."
    # tmux new-session -A -s main
  fi
}

function set_gpg_tty {
  export GPG_TTY=$(tty)
}

case "$hostname" in
  *chuck* )
  start_or_attach_tmux
  set_gpg_tty
  ;;
esac
