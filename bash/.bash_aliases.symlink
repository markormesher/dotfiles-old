alias ..='cd ..'
alias cp='rsync -avz --progress'
alias l='ls'
alias ll='ls -lah'

# Linux specific:
if [[ "$OSTYPE" == *"linux"* ]]; then
	if command -v apt > /dev/null; then
		alias apt='sudo apt'
	fi
fi

# MacOS specific:
if [[ "$OSTYPE" == *"darwin"* ]]; then
	alias shuf='gshuf'
fi

# Put a nice header on the terminal each time it is cleared
alias clear='clear; echo; seq 1 $(tput cols) | shuf | spark | lolcat; echo'
