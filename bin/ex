#!/usr/bin/env bash

if [ "$1" = "" ]; then
	echo "Usage: ex <file>"
	exit 0
fi

if [ -f "$1" ] ; then
	case "$1" in
		*.tar.bz2) tar xvjf "$1" ;;
		*.tar.gz) tar xvzf "$1" ;;
		*.bz2) bunzip2 "$1" ;;
		*.rar) unrar x "$1" ;;
		*.gz) gunzip "$1" ;;
		*.tar) tar xvf "$1" ;;
		*.tbz2) tar xvjf "$1" ;;
		*.tgz) tar xvzf "$1" ;;
		*.zip) unzip "$1" ;;
		*.Z) uncompress "$1" ;;
		*.7z) 7za x "$1" ;;
		*.rar) unrar "$1" ;;
		*) echo "'$1' cannot be extracted via ex" ;;
	esac
else
	echo "'$1' is not a valid file"
fi
